<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/Styled.ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/Styled.ActionBar.TabText</item>
        <item name="android:actionBarTabStyle">@style/Styled.ActionBar.TabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/Styled.ActionBar.TabBar</item>
        <!-- Support library compatibility -->

        <item name="actionBarStyle">@style/Styled.ActionBar</item>
        <item name="actionBarTabTextStyle">@style/Styled.ActionBar.TabText</item>
        <item name="actionBarTabStyle">@style/Styled.ActionBar.TabStyle</item>
        <item name="actionBarTabBarStyle">@style/Styled.ActionBar.TabBar</item>

        <!-- Hack to convert search view text color to white-->
    </style>

    <style name="Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_bgr</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_styled</item>
        <item name="android:backgroundSplit">@drawable/ab_solid_styled</item>

        <!-- Support library compatibility -->
        <!--<item name="background">@drawable/ab</item>-->
        <item name="background">@drawable/action_bar_bgr</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_styled</item>
        <item name="backgroundSplit">@drawable/ab_solid_styled</item>
    </style>

    <style name="Styled.ActionBar.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/tab_bar_text_color</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="Styled.ActionBar.TabStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_styled</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:minWidth">75dp</item>

    </style>

    <style name="Styled.ActionBar.TabBar" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:dividerPadding">17dp</item>
        <item name="dividerPadding">5dp</item>
    </style>

    <style name="Styled.TextAppearance.Announcement.Time" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Styled.ActionBar.ActionButton" parent="@style/Widget.AppCompat.Light.ActionButton">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>
    <style name="Styled.TextAppearance.Announcement.Content" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Styled.TextAppearance.Announcement.Info" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/info_text_size</item>
        <item name="android:paddingTop">@dimen/info_padding</item>
        <item name="android:paddingBottom">@dimen/info_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="Styled.Navigation.Spinner" parent="@style/Widget.AppCompat.Base.Spinner">

    </style>

</resources>
